# .env.example - copy and edit for Render environment
# Core
N8N_HOST=0.0.0.0
N8N_PORT=5678
N8N_PROTOCOL=https

# IMPORTANT: include trailing slash at end
N8N_WEBHOOK_URL=https://mega-agency-n8n-server.onrender.com/
N8N_WEBHOOK_URL_EXTERNAL=https://mega-agency-n8n-server.onrender.com/
N8N_EDITOR_BASE_URL=https://mega-agency-n8n-server.onrender.com
WEBHOOK_URL=https://mega-agency-n8n-server.onrender.com/

# Basic auth (optional but recommended on public)
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=admin123

# Encryption key (32 chars recommended)
N8N_ENCRYPTION_KEY=replace_with_32_characters_key_here

# Database (optional - Neon)
DB_TYPE=postgresdb
DB_POSTGRESDB_HOST=ep-xxx-pooler.us-east-1.aws.neon.tech
DB_POSTGRESDB_PORT=5432
DB_POSTGRESDB_DATABASE=neondb
DB_POSTGRESDB_USER=neondb_owner
DB_POSTGRESDB_PASSWORD=npg_...
DB_POSTGRESDB_SSL_ENABLED=true
DB_POSTGRESDB_SSL_REJECT_UNAUTHORIZED=false

# Optional tuning
N8N_TRUST_PROXY=true
N8N_RUNNERS_ENABLED=true
